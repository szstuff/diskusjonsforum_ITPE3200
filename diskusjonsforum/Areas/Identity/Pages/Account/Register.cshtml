@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="form-box align-middle">
    <div class="register-container" id="register">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="top text-white">
                <!-- Top section for going to login -->
                <span>Have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login here</a></span>
                <p class="login-header">Create a new account.</p>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating input-box text-white">
                <input asp-for="Input.Email" class="form-control" style="border-radius: 30px" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating input-box text-white">
                <input asp-for="Input.Password" class="form-control" style="border-radius: 30px" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating input-box text-white">
                <input asp-for="Input.ConfirmPassword" class="form-control" style="border-radius: 30px" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="input-box d-flex justify-content-center align-items-center">
                <button class="submit" id="registerSubmit" type="submit">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}