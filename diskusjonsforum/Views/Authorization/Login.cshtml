@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="~/css/site.css"/>
        <link rel="stylesheet" type="text/css" href="~/css/authentication.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Zanabazar+Square&family=Roboto&family=Ubuntu:wght@300;400;700&display=swap" rel="stylesheet">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    </head>
    <body>
        <div class="login-container">
            <h2>Welcome Back!</h2>
            <form>
                <div class="input-container">
                    <input type="text" placeholder="Username" id="username" class="rounded-input" required>
                    <i class='bx bxs-user' ></i>
                </div>
                <div class="input-container">
                    <input type="password" placeholder="Password" id="password" class="rounded-input" required place>
                    <i class='bx bxs-lock-alt'></i>
                </div>
                <div class="login-button">
                    <button class="btn-outline-success" type="submit">Logg inn</button>
                </div>
            </form>
            <div class="register-here">
                <p>Don't have an account?<a asp-area="" asp-controller="Authorization" asp-action="Register"> Register here</a></p>
            </div>
        </div>
    </body>
</html>

