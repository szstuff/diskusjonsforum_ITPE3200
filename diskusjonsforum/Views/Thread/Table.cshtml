@* @model ThreadListViewModel

<!-- <a href="/ThreadThread/Grid">Grid View</a> -->

<div class="container">
    <h1 class="text-center">List of discussion threads (@Model.CurrentViewName Name)</h1>
    <!-- Center table using mx-auto and making the table responsive -->
    <div class="table-responsive mx-auto">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Title</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var thread in Model.Threads)
                {
                    <tr>
                        <td>@thread.User.Name</td>
                        <td>
                            <div class="thread-title">
                                <a 
                                asp-controller="Thread" 
                                asp-action="Thread" 
                                asp-route-threadID="@thread.ThreadId">
                                @thread.ThreadTitle
                                </a>
                            </div>
                        </td>
                        <td>@thread.ThreadComments</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <table class="table table-striped">
        <tr><th>ApplicationUser</th><th>Title</th><th>Comments</th></tr>
        @foreach (var thread in Model.Threads)
        {
            <tr>
                <td>@thread.User?.UserName</td>
                <td><a asp-controller="Thread" asp-action="Thread" asp-route-threadID="@thread.ThreadId">@thread.ThreadTitle</a></td>
                <td>@thread.ThreadComments</td>
                <td>@thread.ThreadId</td>
                <td></td>
            </tr>
        }
    </table>
    
    <p class="text-center">
        <a class="btn btn-secondary"
           asp-controller="Thread"
           asp-action="Create"> Start a new thread </a>
    </p>
</div>