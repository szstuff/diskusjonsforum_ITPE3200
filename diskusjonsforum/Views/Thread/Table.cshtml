@model ThreadListViewModel

<h1>List of discussion threads (@Model.CurrentViewName Name)</h1>
<!-- <a href="/ThreadThread/Grid">Grid View</a> -->
<link rel="stylesheet" href="~/css/table.css">

<div class="container">
    <table class="table">
        <!-- <tr><th>User</th><th>Title</th><th>Comments</th></tr> -->
        @foreach (var thread in Model.Threads)
        {
            
            <tr>
                <td><b>Id:</b>@thread.User.Name
                    <small class="comment">@thread.ThreadId comments</small>
                    <br>
                    <a asp-controller="Thread" asp-action="Thread" asp-route-threadID="@thread.ThreadId">@thread.ThreadTitle</a></td>
                <td>@thread.ThreadComments</td>
                <!--<td><small class="comment">@thread.ThreadId comments</small></td> -->
                
            </tr>
        }
    </table>
    
    <p>
        <a class="btn btn-secondary"
           asp-controller="Thread"
           asp-action="Create"> Start a new thread </a>
    </p>
</div>