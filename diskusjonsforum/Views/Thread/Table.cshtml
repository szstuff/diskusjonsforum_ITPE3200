@model ThreadListViewModel

<h1>List of discussion threads (@Model.CurrentViewName Name)</h1>
<!-- <a href="/ThreadThread/Grid">Grid View</a> -->

<div class="container">
    <table class="table table-striped">
        <tr><th>User</th><th>Title</th><th>Comments</th></tr>
        @foreach (var thread in Model.Threads)
{
                <tr>
                    <td>By @thread.CreatedBy on @thread.CreatedAt</td>
                    <td><a asp-controller="Thread" asp-action="Thread" asp-route-threadID="@thread.Id">@thread.Title: @thread.Description</a></td>
                    @* <td>@thread.CommentCount</td> Fungerer ikke. ThreadController må telle og gi det viewet  *@
                    <td></td>
                </tr>
}
    </table>
</div>