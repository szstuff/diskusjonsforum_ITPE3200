@model Diskusjonsforum.Models.Thread
<!-- <link href="Stylesheet.css" rel="stylesheet" type="text/css" /> -->

<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="~/css/thread_table.css">
        <link rel="stylesheet" href="~/css/site.css">
    </head>
    <body>
        <div class="container mt-5">
        <div class="row mt-4 col-12 mb-4 p-4 border border-bottom d-flex justify-content-start align-items-stretch flex-fill thread-container">
            <h1 class="thread-title-current"> @Model.ThreadTitle</h1>
            
            <div class="thread-information">
                <p> Posted in @Model.ThreadCategory by @Model.User?.Name <br />
                    Posted: @Model.ThreadCreatedAt.
                    @if (@Model.ThreadCreatedAt != @Model.ThreadLastEditedAt)
                    {
                        <b> Last edited: @Model.ThreadLastEditedAt </b>
                    }
                </p>
            </div>                

            <p class="threadbody"> @Model.ThreadBody </p>

            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <p class="d-flex justify-content-start comments-heading">Comments:</p>
                    </div>
                    <div class="col-6 text-end">
                        <a class="btn btn-primary comment-button"
                            asp-controller="Comment"
                            asp-action="Create"
                            asp-route-threadId="@Model.ThreadId">
                            Add comment
                        </a>
                    </div>
                </div>
            </div>

            <div class="display-comments">
                <ul class="outermost-container">
                    @foreach (var comment in Model.ThreadComments.Where(c => c.ParentCommentId == null))
                        {
                            DisplayComment(comment);

                        }                   
                </ul>
            </div>
                @functions {
                    async Task DisplayComment(Comment comment)
                    {
                        <div class="nested-container">
                            <div class="row commentDiv">
                                <div class="col-6 commentBody">
                                    <p class="d-flex justify-content-start date">
                                        <small>
                                            <small>
                                                Posted by @comment.User.Name on @comment.CommentCreatedAt.
                                                @if (comment.CommentCreatedAt != comment.CommentLastEditedAt)
                                                    {
                                                        <b> Last edited: @comment.CommentLastEditedAt.</b>
                                                    }
                                                </small>
                                            </small>
                                        </p>
                                    <p class="commentbody"> @comment.CommentBody</p>
                                </div>

                                <!-- også ren chatgpt. vi bør kanskje finne kilde på nett -->
                                @* <a class="btn btn-primary" href="/Comment/Create?thread=@Model.ThreadId&comment=@comment.CommentId"> Reply to comment @comment.CommentId </a> *@
                                @* <a class="btn btn-primary" asp-controller="Comment" asp-action="Create" asp-route-commentId="@comment.CommentId" asp-route-threadId="@Model.ThreadId"> Reply to comment @comment.CommentId </a> *@
                                <div class="d-flex justify-content-end">
                                    <div class="vertical-button-container">
                                        <a class="btn btn-primary" asp-controller="Comment" asp-action="Create" asp-route-parentCommentId="@comment.CommentId" asp-route-threadId="@comment.ThreadId"> <small>Reply</small> @comment.CommentId </a>
                                        <a class="btn btn-primary" asp-controller="Comment" asp-action="Edit" asp-route-commentId="@comment.CommentId" asp-route-threadId="@comment.ThreadId"> <small>Edit</small> @comment.CommentId </a>
                                        <a class="btn btn-primary" asp-controller="Comment" asp-action="DeleteComment" asp-route-commentId="@comment.CommentId"> <small>Delete</small> @comment.CommentId </a>
                                    </div>
                                </div>
                            </div>

                            @foreach (var child in Model.ThreadComments.Where(c => c.ParentCommentId == comment.CommentId))
                            {
                                DisplayComment(child);
                            }
                        </div>
                    }
                }
            </div>
        </div>
    </body>
</html>